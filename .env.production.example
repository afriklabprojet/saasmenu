# Configuration des variables d'environnement pour Social Login

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URL="${APP_URL}/auth/google/callback"

# Facebook OAuth
FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here
FACEBOOK_REDIRECT_URL="${APP_URL}/auth/facebook/callback"

# Apple OAuth (Sign in with Apple)
APPLE_CLIENT_ID=your_apple_service_id_here
APPLE_CLIENT_SECRET=your_apple_client_secret_here
APPLE_REDIRECT_URL="${APP_URL}/auth/apple/callback"

# Configuration SEO
SEO_DEFAULT_TITLE="RestroSaaS - Solution Complète pour Restaurants"
SEO_DEFAULT_DESCRIPTION="Plateforme SaaS complète pour la gestion de restaurants avec commandes en ligne, réservations, et plus encore."
SEO_DEFAULT_KEYWORDS="restaurant,saas,commandes,réservations,menu,livraison"

# Configuration Multi-language
DEFAULT_LOCALE=fr
SUPPORTED_LOCALES=fr,en,ar
LOCALE_DETECTION=auto

# WhatsApp Integration
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Payment Gateways additionnels
CINETPAY_API_KEY=your_cinetpay_api_key
CINETPAY_SITE_ID=your_cinetpay_site_id
CINETPAY_SECRET_KEY=your_cinetpay_secret_key

# Notification Services
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_APP_CLUSTER=mt1

# Firebase Configuration (pour notifications push)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_SENDER_ID=your_firebase_sender_id

# Storage Configuration
FILESYSTEM_DRIVER=public
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_s3_bucket_name

# Queue Configuration (pour les tâches asynchrones)
QUEUE_CONNECTION=database
# Ou pour Redis: QUEUE_CONNECTION=redis

# Cache Configuration
CACHE_DRIVER=file
# Ou pour Redis: CACHE_DRIVER=redis

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Mail Configuration pour notifications
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourrestaurant.com
MAIL_FROM_NAME="${APP_NAME}"
